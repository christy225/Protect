<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_assistant.SearchAmountFragment">

    <EditText
        android:id="@+id/searchAmount"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_circular"
        android:hint="Rechercher un montant"
        android:iconifiedByDefault="false"
        android:inputType="number"
        android:paddingStart="75dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/searchAmountButton"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:background="@drawable/backgroundgradientgray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginStart="1dp"
        android:src="@drawable/baseline_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/searchAmount"
        app:layout_constraintStart_toStartOf="@+id/searchAmount"
        app:layout_constraintTop_toTopOf="@+id/searchAmount" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/search_date_phone_list_title"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/searchAmountButton"
        app:layout_constraintTop_toBottomOf="@+id/searchAmount" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSearchMontant"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_color_border"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ProgressBar
        android:id="@+id/progressBarSearchAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerSearchMontant" />

    <TextView
        android:id="@+id/searchAmountNoResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aucun rÃ©sultat"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerSearchMontant" />

</androidx.constraintlayout.widget.ConstraintLayout>