<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_assistant.SearchPhoneFragment">

    <SearchView
        android:id="@+id/searchView"
        android:layout_margin="15dp"
        android:background="@drawable/background_circular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:inputType="phone"
        android:queryHint="@string/search_date_phone_placeholder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_date_phone_list_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/date_page_link"
        app:layout_constraintStart_toStartOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="@+id/date_page_link" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/date_page_link"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:text="@string/search_date_phone_linkTo_date_search"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="#0167FF"
        android:paddingHorizontal="15dp"
        android:background="@drawable/backgroundallwhite"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/searchView"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_color_border"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_page_link" />


</androidx.constraintlayout.widget.ConstraintLayout>